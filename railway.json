{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pnpm build",
        "rootDirectory": "apps/web"
    },
    "deploy": {
        "startCommand": "pnpm start",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}